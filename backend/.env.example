# AI API (Required - Your app uses Anthropic/Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database (Will be auto-configured by Render)
POSTGRES_SERVER=your-db-host
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-db-password
POSTGRES_DB=seo_geo_db

# Redis (Use Upstash for free tier)
REDIS_HOST=your-upstash-redis-host
REDIS_PORT=6379

# Authentication (Generate a secure random string)
SECRET_KEY=generate-a-secure-random-string-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth (Optional - can leave empty for demo)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# Email (Optional - can leave empty for demo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Frontend URL (Update after deploying to Vercel)
FRONTEND_URL=https://your-app.vercel.app
